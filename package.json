{
  "name": "neo-skills",
  "version": "0.1.6",
  "description": "A multi-assistant skill generator (Claude/Windsurf/Cursor/GitHub Skills) driven by a canonical SkillSpec.",
  "license": "UNLICENSED",
  "type": "commonjs",
  "bin": {
    "omni-skill": "bin/omni-skill.js",
    "skill-creator": "bin/skill-creator.js"
  },
  "files": [
    "bin/**",
    "src/**",
    "skills/**",
    ".shared/**",
    ".claude/**",
    ".windsurf/**",
    ".cursor/**",
    ".github/skills/**",
    "README.md",
    "pyproject.toml"
  ],
  "scripts": {
    "lint": "eslint \"bin/*.js\" \".eslintrc.cjs\" \".dependency-cruiser.js\"",
    "format": "prettier --write \"bin/*.js\" \".eslintrc.cjs\" \".prettierrc.json\" \".dependency-cruiser.js\"",
    "format:check": "prettier --check \"bin/*.js\" \".eslintrc.cjs\" \".prettierrc.json\" \".dependency-cruiser.js\"",
    "boundary": "depcruise --config .dependency-cruiser.js bin",
    "depcheck": "depcheck --ignores=depcheck,dependency-cruiser,eslint,prettier",
    "gate": "npm run format:check && npm run lint && npm run boundary && npm run depcheck",
    "postinstall": "node -e \"process.env.NEO_SKILLS_SKIP_UIPRO_INSTALL==='1'?process.exit(0):process.exit(require('child_process').spawnSync('npm',['install','-g','uipro-cli'],{stdio:'inherit',shell:true}).status||0)\""
  },
  "devDependencies": {
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^16.6.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=16"
  }
}
