{
  "name": "neo-skills",
  "version": "0.1.0",
  "description": "A multi-assistant skill generator (Claude/Windsurf/Cursor/GitHub Skills) driven by a canonical SkillSpec.",
  "license": "UNLICENSED",
  "type": "commonjs",
  "bin": {
    "omni-skill": "bin/omni-skill.js",
    "skill-creator": "bin/skill-creator.js"
  },
  "files": [
    "bin/**",
    "src/**",
    ".claude/**",
    ".windsurf/**",
    ".cursor/**",
    ".github/skills/**",
    "README.md",
    "pyproject.toml"
  ],
  "scripts": {
    "postinstall": "node -e \"process.env.NEO_SKILLS_SKIP_UIPRO_INSTALL==='1'?process.exit(0):process.exit(require('child_process').spawnSync('npm',['install','-g','uipro-cli'],{stdio:'inherit',shell:true}).status||0)\""
  },
  "engines": {
    "node": ">=16"
  }
}
