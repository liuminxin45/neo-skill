{
  "unit_id": "gh:aider-chat/aider#git-commit",
  "package_id": "gh:aider-chat/aider",
  "name": "Aider Git Commit Generator",
  "description": "AI-generated commit messages based on code changes",
  "capability_tags": [
    "git-commit",
    "commit-message",
    "git-workflow"
  ],
  "keywords": [
    "git commit",
    "commit message",
    "auto commit",
    "aider"
  ],
  "ide_support": ["windsurf", "cursor", "generic"],
