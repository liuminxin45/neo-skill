{
  "version": 1,
  "id": "pnpm-workspace-nx",
  "displayName": "pnpm workspace + Nx",
  "evidence": {
    "mustExist": ["pnpm-workspace.yaml", "nx.json"],
    "mayExist": ["workspace.json", "project.json", "pnpm-lock.yaml"]
  },
  "recommendedBoundaryToolOrder": ["eslint-plugin-boundaries", "dependency-cruiser"],
  "recommendedScripts": {
    "lint": "pnpm nx run-many -t lint",
    "typecheck": "pnpm nx run-many -t typecheck",
    "test": "pnpm nx run-many -t test",
    "depcheck": "pnpm nx run-many -t depcheck"
  },
  "notes": [
    "Nx can be used for affected-based PR checks (optional).",
    "If Nx targets do not exist yet, fall back to pnpm -r scripts and add Nx later."
  ]
}
